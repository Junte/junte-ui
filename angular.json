{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "junte-ui-app": {
      "i18n": {
        "sourceLocale": {
          "code": "en",
          "baseHref": "/en/"
        },
        "locales": {
          "ru": {
            "translation": "src/locale/messages.ru.xlf",
            "baseHref": "/ru/"
          }
        }
      },
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true
        }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/junte-ui-app",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.app.json",
            "sourceMap": false,
            "assets": [
              "src/favicon.ico",
              "src/assets/icons",
              "src/assets/images",
              {
                "glob": "**/*",
                "input": "projects/junte-ui/src/lib/assets/icons/animated/",
                "output": "./assets/icons/animated/"
              },
              {
                "glob": "**/*",
                "input": "projects/junte-ui/src/lib/assets/icons/svg/",
                "output": "./assets/icons/svg/"
              }
            ],
            "styles": [
              "./node_modules/@openfonts/montserrat_cyrillic/index.css",
              "./node_modules/@openfonts/open-sans_cyrillic/index.css",
              "./projects/junte-ui/src/lib/assets/fonts/junte-ui-icons-default/junte-ui-icons-default-font.scss",
              "./src/assets/fonts/junte-ui-test-default/junte-ui-test-default-font.scss",
              "./src/assets/fonts/junte-ui-test-layout/junte-ui-test-layout-font.scss",
              "./src/styles.scss",
              "./src/assets/themes/light.scss",
              "./src/assets/themes/dark.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "./dist/junte-ui/lib/assets/styles"
              ]
            }
          },
          "configurations": {
            "production": {
              "localize": [
                "ru",
                "en"
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": true,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "6mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "5kb"
                }
              ]
            },
            "ru": {
              "aot": true,
              "outputPath": "dist/ru/",
              "baseHref": "/",
              "i18nFile": "src/locale/messages.ru.xlf",
              "i18nFormat": "xlf",
              "i18nLocale": "ru"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "baseHref": "/",
            "browserTarget": "junte-ui-app:build",
            "hmrWarning": false
          },
          "configurations": {
            "production": {
              "browserTarget": "junte-ui-app:build:production"
            },
            "ru": {
              "browserTarget": "junte-ui-app:build:ru"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "junte-ui-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "styles": [
              "src/styles.scss"
            ],
            "scripts": [],
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "junte-ui-app",
  "cli": {
    "analytics": false
  }
}
